<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/team" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Please enter your information"
            android:textColor="#0000FF" />

        <EditText
            android:id="@+id/UsernameSU"
            android:layout_width="316dp"
            android:layout_height="46dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/drawable_custom"
            android:hint="Username"
            android:inputType="text" />

        <EditText
            android:id="@+id/PhoneSU"
            android:layout_width="316dp"
            android:layout_height="46dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/drawable_custom"
            android:hint="Phone number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/EmailSU"
            android:layout_width="316dp"
            android:layout_height="46dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/drawable_custom"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/PasswordSU"
            android:layout_width="316dp"
            android:layout_height="46dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/drawable_custom"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnSU"
            android:layout_width="213dp"
            android:layout_height="50dp"
            android:background="@drawable/drawable_custom"
            android:text="Sign Up"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:text="You already have an account? " />

        <TextView
            android:id="@+id/SignInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sign In"
            android:textColor="#0000FF" />

    </LinearLayout>

</RelativeLayout>