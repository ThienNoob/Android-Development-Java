<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/overDueJobsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:hint="Công việc quá hạn" />

        <EditText
            android:id="@+id/completedJobsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overDueJobsEditText"
            android:layout_marginTop="16dp"
            android:text="2"

            android:hint="Nhập công việc đã làm" />

        <EditText
            android:id="@+id/unscheduledJobEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Việc chưa lên lịch"
            android:text="2"

            android:layout_marginTop="16dp"
            android:layout_below="@+id/completedJobsEditText"/>

        <EditText
            android:id="@+id/inProcessJobEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unscheduledJobEditText"
            android:layout_marginTop="16dp"
            android:text="2"

            android:hint="Việc đang làm" />
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inProcessJobEditText"
            android:text="Button"/>





    </RelativeLayout>
</ScrollView>
